# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Alternative: Use local LLaMA via Ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# Search APIs (Free Tier)
SERPAPI_KEY=your_serpapi_key_here
# Alternative search options:
# BING_SEARCH_API_KEY=your_bing_api_key
# GOOGLE_CUSTOM_SEARCH_API_KEY=your_google_api_key
# GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_search_engine_id

# Contact Discovery APIs (Optional - Free Tier)
HUNTER_IO_API_KEY=your_hunter_io_key_here
SNOV_IO_API_KEY=your_snov_io_key_here

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS_FILE=config/google_credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_WORKSHEET_NAME=Leads

# Google Drive Configuration (Bonus)
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Email Configuration (Bonus - for auto-sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SENDER_EMAIL=your_email@gmail.com
SENDER_NAME=Your Company Name

# Application Settings
MAX_LEADS_PER_RUN=10
LOG_LEVEL=INFO
OUTPUT_DIR=output
PORTFOLIO_DIR=output/portfolios

# Rate Limiting
API_RATE_LIMIT_DELAY=2
MAX_RETRIES=3
